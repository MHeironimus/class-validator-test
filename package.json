{
  "name": "class-validator-test",
  "version": "0.0.7",
  "description": "A project for testing various aspects of the typestack/class-validator library.",
  "main": "dist/server.js",
  "private": true,
  "engines": {
    "node": ">=6.9.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MHeironimus/class-validator-test"
  },
  "scripts": {
    "start": "npm run build && npm run watch",
    "start-nocheck": "npm run build-ts && npm run watch",
    "build": "npm run build-ts && npm run lint",
    "test": "mocha",
    "build-test-ts": "tsc -p tsconfig.test.json",
    "test-coverage": "nyc --reporter=html --reporter=text --reporter=cobertura mocha --reporter mocha-junit-reporter --reporter-options mochaFile=./coverage/test-results.xml",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.test.json"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "class-validator": "^0.8.1",
    "cookie-parser": "1.4.3",
    "dotenv": "5.0.0",
    "errorhandler": "1.5.0",
    "express": "^4.16.2",
    "express-winston": "2.4.0",
    "http-status-codes": "^1.3.0",
    "lodash": "4.17.4",
    "multer": "^1.3.0",
    "pg": "7.4.1",
    "pug": "2.0.0-rc.4",
    "reflect-metadata": "^0.1.12",
    "request": "^2.83.0",
    "routing-controllers": "^0.7.6",
    "typedi": "^0.6.0",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "4.1.2",
    "@types/cookie-parser": "1.4.1",
    "@types/dotenv": "4.0.2",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.11.0",
    "@types/knex": "0.14.5",
    "@types/lodash": "4.14.99",
    "@types/mocha": "^2.2.48",
    "@types/multer": "^1.3.6",
    "@types/nock": "9.1.2",
    "@types/node": "^9.4.0",
    "@types/request": "^2.47.0",
    "@types/sinon": "4.1.3",
    "@types/supertest": "2.0.4",
    "@types/uuid": "^3.4.3",
    "@types/validator": "^6.3.0",
    "@types/winston": "2.3.7",
    "apidoc": "0.17.6",
    "chai": "4.1.2",
    "concurrently": "3.5.1",
    "mocha": "^5.0.0",
    "mocha-junit-reporter": "1.17.0",
    "nock": "9.1.6",
    "nodemon": "1.14.11",
    "nyc": "^11.4.1",
    "sinon": "4.2.2",
    "source-map-support": "0.5.3",
    "supertest": "3.0.0",
    "ts-loader": "^3.4.0",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "typescript": "^2.7.1"
  },
  "nyc": {
    "exclude": [
      "src/server.ts",
      "src/db.ts",
      "test/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
